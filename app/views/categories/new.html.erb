<h1 class="text-center mt-4">Create a new category</h1>


<div class="container">
  <div class="row justify-content-center">
    <div class="col-10">
      <%= render 'shared/errors', obj: @category %>
      <%= form_with(model: @category, local: true) do |f| %>
        <div class="form-group row">
          <%= f.label :name, "Category name", class: "col-2 col-form-label text-light" %>
          <div class="col-10">
            <%= f.text_field :name, class: "form-control shadow rounded", placeholder: "Enter a name" %>
          </div>
          </div>
                      <br>
                  <div class="form-group text-center">
                    <%= f.submit class: "btn btn-outline-light btn-lg" %>
                  </div>
              <% end %>
          </div>
          <div class="mb-3">
              <%= link_to '[ Cancel and return to article listing ]', articles_path, class: "text-center text-light" %>
              </div>
        </div>
